{
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"vue",
		"prettier"
	],
	"rules": {
		"prettier/prettier": "error",
		"vue/multi-word-component-names": "off",
		"quotes": [
			"error",
			"single"
		],
		"max-len": [
			"error",
			{
				"code": 256,
				"ignorePattern": "d=\"([\\s\\S]*?)\"",
				"ignoreUrls": true
			}
		],
		"no-multi-spaces": [
			"error"
		],
		"vue/require-default-prop": "off"
	}
}
