font-face(fontFamily, path, fileName, fontWeight = normal, fontStyle = normal)
	@font-face
		font-family fontFamily
		src url(path + fileName + '.woff') format("woff"),
			url(path + fileName + '.woff2') format("woff2")
		font-weight fontWeight
		font-style fontStyle
		font-display swap

font-face(OpenSans, '/assets/fonts/', 'OpenSansBold', 700)
font-face(OpenSans, '/assets/fonts/', 'OpenSansRegular', 400)
font-face(Roboto, '/assets/fonts/', 'RobotoSlabBold', 700)
font-face(Roboto, '/assets/fonts/', 'RobotoSlabRegular', 500)
font-face(Roboto, '/assets/fonts/', 'RobotoSlabLight', 300)
font-face(Roboto-Condensed, '/assets/fonts/', 'RobotoCondensedBold', 700)
font-face(Verdana, '/assets/fonts/', 'VerdanaBold', 700)