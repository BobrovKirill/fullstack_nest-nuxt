.read-material
	position relative
	&__body
		display grid
		grid-template-columns 1fr
		column-gap 20px

		padding 20px 0 0
		margin 5px 0 20px

		background #F7F7F7
		border-radius 10px
		// @media({min} 600px)
		@media({min} sm)
			grid-template-columns 1fr 226px

			padding 20px 20px 30px
		@media({min} xxl)
			grid-template-columns 1fr 336px

			padding 20px 0 20px 88px

		hr
			display none

	&__content
		padding 0 20px
		@media({min} sm)
			padding 0

	hr
		color #DDDDDD
		background #DDDDDD

	&__title
		font-family 'Roboto'
		font-weight 700
		font-size 20px
		line-height 26px
		color secondaryColor

		margin 9px 0 6px
		&:hover
			color hoverFontColor
		@media({min} sm)
			font-size 28px
			line-height 34px

			margin 7px 0 16px
		@media({min} xxl)
			font-size 32px
			line-height 36px

			margin 4px 0 10px

	&__text
		font-size 16px
		line-height 24px
		padding 0
		margin-bottom 0
		@media({max} sm - 1px)
			padding 0 0 20px
		@media({max} xxl - 1px)
			position relative

			overflow hidden
			text-overflow ellipsis
			display -moz-box
			-moz-box-orient vertical
			display -webkit-box
			-webkit-line-clamp 4
			-webkit-box-orient vertical
			line-clamp 4
			box-orient vertical
			&:after
				position absolute
				top 8px
				left 0

				content ''
				background linear-gradient(180deg, rgba(247, 247, 247, 0.0001) 0%, #F7F7F7 88.78%)
				pointer-events none

				height 91%
				width 100%

			&_active
				overflow visible

				display block

				margin-bottom 10px
				&:after
					content none

	&__img
		width 100%
		height calc(100vw * 0.7)

		background-image url('/static/images/placeholder.webp')
		background-repeat no-repeat
		background-position center center
		background-size cover
		border-bottom-right-radius 10px
		border-bottom-left-radius 10px
		overflow hidden
		img
			width 100%
			height 100%
			object-fit cover
		@media({min} sm)
			height 169px
			border-bottom-right-radius 0
			border-bottom-left-radius 0
			overflow auto
		@media({min} xxl)
			height 251px

	&__btn
		margin 0 auto 20px
		grid-row 2 / 3
		@media({min} sm)
			grid-column 2 span
			grid-row auto
			margin 0 auto
		@media({min} xxl)
			display none !important

	&__big
		.read-material__body
			background-color transparent
			border-radius 0
			padding 20px 0

		.read-material__text
			line-clamp 8
			-webkit-line-clamp 9
			&:after
				top auto
				bottom 0

				background linear-gradient(180deg, rgba(255, 255, 255, 0.0001) 0%, #FFFFFF 88.78%);
			@media({min} sm)
				overflow auto
				text-overflow clip
				display block
				-moz-box-orient default
				display -webkit-block
				-webkit-line-clamp auto
				-webkit-box-orient default
				line-clamp auto
				box-orient default
				&:after
					content none
