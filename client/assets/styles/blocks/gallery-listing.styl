.gallery-listing
	&__list
		display grid
		grid-template-columns minmax(auto, 336px)
		justify-content center
		row-gap 40px
		column-gap 20px

		margin-top 40px
		@media({min} sm)
			grid-template-columns repeat(2, 1fr)
		@media({min} xxl)
			grid-template-columns repeat(3, 1fr)

		& > li
			height auto
			.reportage__title
				font-size 22px
				line-height 26px

			&:first-child
				.reportage
					@media({min} sm)
						height 487px
					@media({min} md)
						height 412px
					@media({min} xl)
						height 520px
					@media({min} xxl)
						width 692px
						height 520px
						margin 0 auto

				@media({min} sm)
					grid-column 2 span
					.reportage__title
						font-size 36px
						line-height 44px
				@media({min} xxl)
						grid-column 3 span
						background-color secondaryBg
