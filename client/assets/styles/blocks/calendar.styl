.calendar
	position absolute
	top 56px
	right -20px
	z-index 5

	width 300px

	padding 36px 18px

	background-color primaryBg
	box-shadow 0px 8px 20px rgba(0, 0, 0, 0.2)
	border 1px solid #DDDDDD
	border-radius 10px
	align-items baseline
	@media({min} sm)
		right 0

	&__container
		position relative
		display flex
		align-items center
		justify-content space-between
		p
			font-weight 700
			font-size 18px
			line-height 25px
			color secondaryColor
		.button-calendar
			@media({max} sm - 1px)
				span
					display none
		&.bottom__calendar
			.calendar
				top -356px
				bottom 56px

	&__error-message
		padding 0 32px 16px
		color primaryAccentColor

	&__header
		display flex
		justify-content space-between
		align-items center
		margin-bottom 16px
	&__data
		font-weight 700
		line-height 23px
		font-size 18px
		&-month
			text-transform capitalize
	&__controls
		display flex
		gap 4px
	&__control
		border-radius 50px
		background-color secondaryBg
		border none
		box-shadow 0px 0px 4px rgba(0, 0, 0, 0.25)
		fill secondaryColor
		&[disabled]
			fill #bac0b7
		&:first-child
			transform rotate(90deg)
		&:last-child
			transform rotate(-90deg)
	&__table
		user-select none
		max-width 100%
		table-layout fixed
	&__day
		font-weight 400
		font-size 14px
		line-height 18px
		text-align center
		color #BAC0B7


		width 38px
		height 32px
		&.calendar__day_weekend
				color #DFB5AD

		&_active
			color mainFont
			&.calendar__day_weekend
				color primaryAccentColor
				.calendar__link
					color primaryAccentColor

		&_today
			a
				background secondaryBg
				border 2px solid primaryAccentColor
				border-radius 4px

	&__link
		display flex
		flex-direction column
		justify-content center
		align-items center

		width 100%
		height 100%

		font-weight 700

		background-color secondaryBg
		border-radius 4px
		border 2px solid secondaryBg
		&:hover
			background secondaryBg
			border 2px solid primaryAccentColor
			border-radius 4px

.calendar_hidden,.calendar__error-message_hidden
	display none