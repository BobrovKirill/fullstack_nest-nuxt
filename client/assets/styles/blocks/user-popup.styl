.user-popup
	display none

	position absolute
	right 20px
	top 60px
	z-index 12

	background-color primaryBg
	box-shadow 0px 2px 40px rgba(0, 0, 0, 0.203917)
	border-radius 10px

	max-width 280px
	padding 20px 20px 40px

	&.enable
		display block
	& p
		font-weight 700
		font-size 18px
		line-height 25px
		color secondaryColor
		margin-bottom 10px

	& ul
		margin-top 20px

		display flex
		flex-direction column
		gap 10px

	& a
		font-weight 400
		font-size 16px
		line-height 22px
		color secondaryColor
