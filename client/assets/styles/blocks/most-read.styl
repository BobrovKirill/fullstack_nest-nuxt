.most-read
	grid-area most-read

	padding 40px 20px 60px

	background-color #ffffff
	border-radius 10px
	box-shadow 0px 2px 8px rgba(0, 0, 0, 0.203917)
	@media({min} sm)
		gap 40px
		padding 40px 60px 60px
	@media({min} md)
		padding 60px 60px 90px
	@media({min} xxl)
		padding 40px 60px 90px

	&__title
		text-transform uppercase
		font-family 'Verdana'
		font-style normal
		font-weight 700
		font-size 16px
		line-height 19px
		color secondaryColor
		margin-bottom 30px
		@media({min} sm)
			margin-bottom 40px

	&__list
		display flex
		flex-wrap wrap
		justify-content space-around
		gap 30px
		@media({min} sm)
			gap 40px
		@media({min} xl)
			padding 0 20px

	&__item
		max-width 100%
		@media({max} sm - 1px)
			&:nth-child(n+4)
				display none
		@media({min} sm)
			width 284px
		@media({min} md)
			width 410px
		@media({min} xl)
			width 460px
		@media({min} xxl)
			width 336px