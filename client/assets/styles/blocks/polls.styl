.polls
	&__list
		margin-top 60px

		display flex
		flex-direction column
		gap 80px

.poll
	border-bottom 1px solid #DDDDDD
	padding 0 0 80px
	@media({min} xxl)
			padding 0 90px 100px
	&:last-child
		border-bottom none
	&__meta
		font-weight 400
		font-size 11px
		line-height 15px
		text-transform uppercase
		color primaryColor
	&__question
		font-family 'Roboto'
		font-weight 700
		font-size 20px
		line-height 26px
		color secondaryColor

		margin 10px 0 40px
		@media({min} sm)
			font-size 28px
			line-height 34px
		@media({min} xxl)
			font-size 32px
			line-height 40px
	&__result
		display flex
		flex-direction column
		gap 30px

	&__answer
		display flex
		flex-direction column
		gap 10px
		font-weight 400
		font-size 16px
		line-height 20px
	&__progress
		position relative

		progress
			width 100%
			height 20px
			background #E6E9E5
			border-radius 4px
			overflow hidden
			&::-webkit-progress-value
				background linear-gradient(90deg, #5D6359 0%, #BAC0B7 100%)
				border-radius 4px
			&::-webkit-progress-bar
				background #E6E9E5
				border-radius 4px
			&::-moz-progress-bar
				background #E6E9E5
				border-radius 4px
			&::-moz-progress-bar
				background: linear-gradient(90deg, #5D6359 0%, #BAC0B7 100%)
				border-radius 4px

		span
			position absolute
			top 25%
			transform translateY(-25%)
			margin-left 14px
			font-weight 400
			font-size 12px
			line-height 14px

