.footer
	background-color primaryBg
	padding 30px
	@media({min} sm)
		padding 30px 40px 40px
	@media({min} md)
		padding 30px 20px

	&__container
		display grid
		grid-template-columns 1fr
		gap 30px
		@media({min} md)
			grid-template-columns 1fr 336px
			gap 20px

	&__nav
		display grid
		grid-template-columns repeat(2, 1fr)
		column-gap 20px
		row-gap 20px

		@media({min} sm)
			display flex
			flex-direction column
			flex-wrap wrap
			row-gap 26px

			max-height 500px

	&__rubric
		max-width 120px
		@media({min} sm)
			max-width 157px
		@media({min} md)
			max-width 147px
		@media({min} xl)
			max-width 159px

		&-link
			font-size 14px
			line-height 19px
			font-weight 700
			color secondaryColor
			text-transform uppercase
			&:hover
				color primaryAccentColor

	&__subrubrics
		display none
		@media({min} sm)
			display flex
			flex-direction column
			gap 14px

			margin-top 14px

	&__subrubric
		font-size 12px
		line-height 16px
		font-weight 400
		&:hover
			color hoverFontColor

	&__about

		&-title
			display inline-block

			margin-right 20px
			margin-bottom 16px

			color secondaryColor
			text-transform uppercase
			font-size 14px
			line-height 19px
			font-weight 700
			&:hover
				color primaryAccentColor

		&-texts
			@media({min} sm)
				display grid
				grid-template-columns repeat(2, 1fr)
				gap 20px
			@media({min} md)
				display block

		&-link
			display block

			font-size 11px
			line-height 16px
			font-weight 700
			color secondaryColor

			margin-bottom 6px
			&:hover
				color primaryAccentColor

		&-text
			font-size 11px
			line-height 16px
			font-weight 400
			span
				font-weight 700
				color secondaryColor

		&-webrating
			display flex
			justify-content center
			gap 5px

			grid-column 2 span

			margin-top 20px
			@media({min} md)
				justify-content flex-end

