.comments
	background #F7F7F7
	border-radius 10px

	padding 40px 20px
	@media({min} sm)
		padding 60px 90px

	&__title
		font-family 'Roboto'
		font-weight 700
		font-size 28px
		line-height 36px
		color secondaryColor
		span
			color #90978D

	&__form
		display flex
		gap 9px

		margin 40px 0
		@media({min} sm)
			margin 40px 0 60px

		&_answer
			grid-column 2 span

			padding-left 10px
			margin 20px 0 0

			border-left 2px solid #BAC0B7
			align-items center

			.comments__form-img
				height 33px
				width 33px
			.comments__form-btn_active
				fill primaryAccentColor

		&-img
			flex-shrink 0

			height 48px
			width 48px

			border-radius 50px
			background-image url('/static/images/avatar-placeholder.png')
			background-size cover
			background-repeat no-repeat
			overflow hidden
		&-label
			position relative
			flex-grow 1

			max-width 100%
			min-height auto
			.show-message
				width auto
				top 60px
		&-input
			overflow hidden

			width 100%
			height 48px

			padding 14px 46px 14px 20px

			background #FFFFFF
			border 1px solid #DDDDDD
			box-shadow 0px 0px 10px rgba(0, 0, 0, 0.140379)
			border-radius 24px
			resize none

			font-weight 400
			font-size 14px
			line-height 20px
			&::placeholder
				color #BAC0B7
				font-weight 400
				font-size 14px
				line-height 20px

		&-btn
			position absolute
			top 0
			right 0

			height 48px
			width 48px

			padding-left 12px

			border none
			background-color transparent
			fill #90978D
			pointer-events none
			&_active
				pointer-events auto
				fill #2FA8DF
		&-error
			margin-top 10px
			font-weight 400
			font-size 12px
			line-height 20px
			button
				border none
				background-color transparent
				color inherit
			button, span
				border-bottom 1px solid primaryAccentColor

	&__list
		display flex
		flex-direction column
		gap 45px

		margin-bottom 60px

		&_answers
			padding 15px 0 0 15px
			margin-bottom 0

			border-left 2px solid #BAC0B7

			.user__avatar
				width 33px
				height 33px

	&__btn
		margin 0 auto
		width 218px

	.disabled
		color #BAC0B7 !important
		position relative

.show-message
	position absolute
	top 27px
	left 0

	width 240px

	padding 15px 27px 15px 20px
	background primaryBg
	border 1px solid #DDDDDD
	box-shadow 0px 8px 20px rgba(0, 0, 0, 0.2)
	border-radius 10px

	font-family 'OpenSans'
	font-weight 400
	font-size 12px
	line-height 20px
	text-align left
	color mainFont
	button
		border none
		border-bottom 1px solid primaryAccentColor
		background-color transparent
		color inherit

.also-comments
	display flex
	flex-direction column
	gap 20px

	margin-bottom 60px
	&__comment
		&-body
			margin-top 10px

			display flex
			gap 10px

			img
				width 98px
				height 68px
				object-fit cover
			p
				font-family 'Roboto'
				font-weight 700
				font-size 18px
				line-height 24px
