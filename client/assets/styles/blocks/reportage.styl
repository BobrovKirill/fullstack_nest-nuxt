.reportage
	position relative

	width 100%
	height 100%

	background-image url('/static/images/placeholder.png')
	background-repeat no-repeat
	background-size cover
	background-position center center
	&:before
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		z-index 1

		background linear-gradient(180deg, rgba(0, 0, 0, 0.0001) 14.85%, rgba(0, 0, 0, 0.8) 100%)
		content ''

	&__link
		display block

		width 100%
		height 100%

		overflow hidden
		cursor: url('/static/images/cursor.svg') 4 12,auto
		img
			height 100%
			width 100%

			object-fit cover
			transition transform 0.6s

	&__about
		position absolute
		top 0
		left 0
		right 0
		bottom 45px
		z-index 1

		display flex
		flex-direction column
		justify-content flex-end

		padding 8% 20px 0

	&__title
		font-family 'Roboto'
		font-size 22px
		line-height 26px
		font-weight 700
		color #FFFFFF
		margin-bottom 10px
		@media({min}: sm)
			font-size 32px
			line-height 44px
			margin-bottom 20px

	&__text
		display none
		font-size 16px
		line-height 24px
		font-weight 400
		color thirdColor

		overflow hidden
		line-clamp 5
		-webkit-line-clamp 5
		-webkit-box-orient vertical

	&__footer
		position absolute
		bottom 0
		left 20px
		right 20px
		z-index 3

		min-height 44px
		max-height 54px

		padding 0 0 10px

		border-top 1px solid rgba(255,255,255,0.7)
		opacity 0.8
		hr
			display none
	&-date
		color thirdColor

	&-rubric
		color thirdColor

	&__cursor-img
		position absolute
		top 0
		right 0
		z-index 2

		padding 20px

		fill thirdColor
		img
			width 50px
			height 50px
	&:hover
		.reportage__title
			opacity 0.8
		.reportage__link
			img
				transform scale(1.2)


	&_foto-gallery
		height 225px
		overflow hidden
		.reportage__cursor-img
			display none
		&:hover
			.reportage__title
				opacity 1
			.reportage__link
				img
					transform scale(1)

	&_video-gallery
		max-height 653px
		&:after
			position absolute
			top 50%
			left 50%
			z-index 1

			height 60px
			width 60px

			border-radius 50px
			background-color rgba(51,51,51, .8)
			transform translate(-50%, -90%)
			pointer-events none
			content url("data:image/svg+xml; utf8, <svg width='60' height='60' viewBox='0 0 60 60' fill='none' xmlns='http://www.w3.org/2000/svg'><path fill-rule='evenodd' clip-rule='evenodd' d='M30 60C13.4315 60 0 46.5685 0 30C0 13.4315 13.4315 0 30 0C46.5685 0 60 13.4315 60 30C60 46.5685 46.5685 60 30 60ZM30 58C45.464 58 58 45.464 58 30C58 14.536 45.464 2 30 2C14.536 2 2 14.536 2 30C2 45.464 14.536 58 30 58ZM45.3313 29.942L22.1313 15.4865V44.4865L45.3313 29.942Z' fill='white'/></svg>")
		.reportage__cursor-img
			display none
		&:hover
			.reportage__title
				opacity 1
			.reportage__link
				img
					transform scale(1)