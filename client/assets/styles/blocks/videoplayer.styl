.videoplayer
	&-preview
		display flex
		flex-direction column
		justify-content center
		gap 20px

		background-color primaryBg
		border-radius 10px
		box-shadow 0px 2px 8px rgba(0, 0, 0, 0.203917)

		padding 24px 20px 65px
		@media({min} sm)
			padding 30px 40px 70px
		@media({min} xl)
			padding 45px 40px 70px
		@media({min} xxl)
			padding 45px 40px 80px

		&__body
			margin 0 auto
			max-width 100%
			@media({min} sm)
				max-width 480px
			@media({min} md)
				max-width 600px
			@media({min} xl)
				max-width 690px
			@media({min} xxl)
				max-width 870px
			h1
				text-align center
		&__social
			margin 10px auto 0
			p
				margin-bottom  13px

				text-align center
				text-transform uppercase
				font-size 12px
				line-height 16px
				color #90978D

	&-content
		height 100%
		min-width 1px

		background-color primaryBg
		border-radius 10px
		box-shadow 0px 2px 8px rgba(0, 0, 0, 0.203917)

		padding 40px 0 60px
		@media({min} sm)
			padding 60px 20px 60px
		@media({min} md)
			padding 50px 20px 60px
		@media({min} xl)
			padding 60px 20px 60px
		@media({min} xxl)
			padding 60px 40px 40px

		&__video
			position relative
			z-index 1
			background #F7F7F7
			border-radius 10px
			overflow hidden

			padding 20px 20px 60px
			margin 0 0 40px

			height 100%
			max-height calc(100vw * 0.65)
			@media({min} sm)
				max-height calc(100vw * 0.58)
			@media({min} md)
				margin 0 0 60px
				max-height calc((100vw - 80px - 20px - 336px) * 0.62)
			@media({min} lg)
				max-height 388px
			@media({min} xl)
				max-height 470px
			@media({min} xxl)
				max-height 647px
			& .viqeo-embed, .viqeo-external_player
				&:not(:empty)
					& + .videoplayer-content__loader
						display none

		&__loader
			position absolute
			top 0
			left 0
			z-index -1

			width 100%
			height 100%
			img
				height 100%
				width 100%
				object-fit cover
			&:before
				content ""
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background-color rgba(0, 0, 0, 0.8)
			&:after
				content url('/static/images/loading.svg')

				position absolute
				top 50%
				left 50%

				animation-name bar-loader
				animation-duration 1.3s
				animation-iteration-count infinite
				animation-timing-function ease-in-out

				@keyframes bar-loader
					from
						transform translate(-50%, -50%) rotate(0deg)
					100%
						transform translate(-50%, -50%) rotate(-360deg)


