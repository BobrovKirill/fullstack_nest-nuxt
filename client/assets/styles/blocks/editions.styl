.editions
	&__body
		display flex
		flex-direction column
		align-items center
		gap 40px

		padding 40px 0 100px

	&__edition
		max-width 868px
		width 100%

		background-color secondaryBg
		border-radius 10px

		padding 20px

		display grid
		grid-template-columns 1fr
		justify-items center
		gap 10px
		@media({min} sm)
			grid-template-columns auto 1fr
			justify-items start
			gap 20px

		&-img
			width 100%
			height 314px
			object-fit contain
			@media({min} sm)
				width 234px
				height 332px

		&-text
			display flex
			flex-direction column
			align-items center
			justify-content center
			gap 10px
			@media({min} sm)
				align-items flex-start
			@media({min} xxl)
				padding-right 200px
			& > p
				font-weight 400
				font-size 14px
				line-height 24px
			& > h2
				font-family 'Roboto'
				font-weight 700
				font-size 24px
				line-height 28px
				text-align center
				@media({min} sm)
					font-size 36px
					line-height 42px
					text-align left