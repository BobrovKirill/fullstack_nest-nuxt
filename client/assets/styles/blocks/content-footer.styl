.content-footer
	&__subscription
		margin-bottom 40px
	&__body
		@media({min} xxl)
			padding 0 90px
	&__top
		display flex
		flex-direction column
		gap 20px

		margin-bottom 20px
		padding 0 10px
		@media({min} sm)
			flex-direction row
			justify-content space-between
			align-items center
			padding 0 20px
		@media({min} md)
			flex-direction column
			justify-content flex-start
			align-items flex-start
		@media({min} xl)
			flex-direction row
			justify-content space-between
			align-items center
	&__author
		display grid
		align-items center
		column-gap 10px
		margin-right auto
		picture
			grid-column 1 / 2
			grid-row span 2
			width 48px
			height 48px
			border-radius 50px
			background-image url('/static/images/avatar-placeholder.png')
			background-repeat no-repeat
			background-size cover
			img
				width 100%
				height 100%
				object-fit cover
		p
			font-weight 700
			font-size 20px
			line-height 24px
			grid-column 2 / 3
		time
			display inline-block
			font-size 14px
			font-weight 300
			color #90978D
			margin-right 4px
		@media({min} sm)
			margin-right 0
	&__social
		display flex
		flex-direction column
		gap 5px
		span
			font-weight 400
			font-size 12px
			line-height 16px
			text-transform uppercase
			color #90978D
		@media({min} sm)
			flex-direction row
			align-items center
			gap 10px
	&__tags
		display flex
		flex-wrap wrap
		gap 10px

		margin-top 5px
		padding 0 10px
		@media({min} sm)
			padding 0 20px
		.content-footer__tag
			display block

			background-color #F7F7F7
			border 1px solid #F7F7F7
			border-radius 24px
			padding 5px 20px 7px

			font-weight 400
			font-family "OpenSans"
			font-size 14px
			line-height 20px
			color #90978D
			&:hover
				border 1px solid #565c68
		.text-line
			@media({max} sm - 1px)
				padding 0
	&__comments
		padding 20px 0 60px