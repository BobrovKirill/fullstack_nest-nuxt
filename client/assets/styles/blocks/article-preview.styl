.preview
	grid-area preview

	padding 20px 20px 65px

	background-color primaryBg
	box-shadow 0px 2px 8px rgba(0, 0, 0, 0.203917)
	border-radius 10px
	@media({min} sm)
		padding 24px 40px 70px
	@media({min} xl)
		padding 30px 40px 70px
	@media({min} xxl)
		padding 30px 40px 80px

	&__body
		display grid
		grid-template-columns 1fr
		gap 40px

		margin 10px 0 30px
		@media({min} sm)
			grid-template-columns 231px 1fr

			margin 20px 0 60px
		@media({min} md)
			grid-template-columns 364px 1fr
			margin 20px 0 30px
		@media({min} xl)
			grid-template-columns 514px 1fr

	&__figure
		position relative
		z-index 1
		height calc((100vw - 40px) * 0.7)

		background-repeat no-repeat
		background-position center center
		background-size cover
		@media({min} sm)
			height 174px
		@media({min} md)
			height 274px
		@media({min} xl)
			height 386px
		&-front
			width 100%
			height 100%
			object-fit contain

		&-back
			overflow hidden
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			z-index -1
			img
				height 100%
				width 100%
				object-fit cover
				object-position center
				filter blur(10px)

		figcaption
			font-size 12px
			line-height 16px
			font-weight 700
			text-transform uppercase
			color primaryColor
			text-align center

			margin-top 10px
			@media({min} sm)
				text-align left

				margin-top 20px

		&.empty
			background-image url('/static/images/placeholder.webp')
	&__title
		font-family 'Roboto'
		color secondaryColor
		font-weight 700
		font-size 32px
		line-height 36px

		margin-bottom 13px
		@media({min} sm)
			font-size 36px
			line-height 44px

			margin-bottom 20px
		@media({min} md)
			font-size 40px
			line-height 44px
		@media({min} xl)
			font-size 44px
			line-height 44px

	&__text
		font-size 18px
		line-height 28px
		font-weight 400
		@media({min} sm)
			font-size 20px
			line-height 32px
		@media({min} md)
			font-size 24px
			line-height 38px
		@media({min} xl)
			font-size 26px
			line-height 40px
		@media({min} xxl)
			font-size 28px
			line-height 40px

	&__social
		text-align center
		color primaryColor
		text-transform uppercase
		font-size 12px
		line-height 16px
		font-weight 400

		.share
			margin-top 13px
			&__list
				justify-content center