.auth-popup
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background: rgba(0, 0, 0, 0.8);
	z-index 40
	&__container
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

		padding 53px 20px 0

		max-width 300px
		width 100%
		height 610px

		box-shadow 0px 2px 8px rgba(0, 0, 0, 0.203917)
		background-color primaryBg
		border-radius 10px
		overflow hidden
	&__button
		display block
		position absolute
		top 0
		right 0

		width 44px
		height 44px

		border none
		background-color inherit
		&:before,
		&:after
			content ''
			position absolute
			left 15px
			width 16px
			height 2px
			background-color secondaryColor
		&:before
			top 50%
			transform rotate(-45deg) translate(0px, -80%)
		&:after
			bottom 50%
			transform rotate(45deg) translate(0px, 50%)

	&__logo
		margin 0 auto 30px
	&__radio
		display: grid;
		grid-template-columns repeat(2, 1fr)

		margin-bottom 40px
		padding 4px

		width 100%

		border 1px solid #BAC0B7
		border-radius 10px
		input
			&:checked,&:not(:checked)
				position absolute

				width 1px
				height 1px

				padding 0
				overflow hidden
				white-space nowrap
				border 0
				outline none
			&:not(:checked) + label,
			&:checked + label
				display flex
				align-items center
				justify-content center

				font-size 14px
				line-height: 16px;
				font-weight 700

				cursor: pointer;
				border-radius 6px

				width 100%
				height 40px
			&:checked
				& + label
					background-color secondaryBg
			&:focus-visible + label
				outline 2px solid #333

	// &__auth-form
	// &__reg-form
	form
		& > label
			position: relative;
			z-index 0

			width: 100%;
			height: 48px;
			padding: 0;

			overflow: hidden;

			white-space: nowrap;

			border: 0;
			input:not([type="checkbox"])
				position absolute
				top 0
				left 0
				z-index 1

				width 100%
				height 48px

				padding 15px 0 15px 25px

				border 1px solid #BAC0B7
				border-radius 10px

				font-weight: 400;
				font-size: 14px;
				line-height: 18px
				&::placeholder
					color #BAC0B7
				&:focus-visible
					border: 2px solid #BAC0B7;
					outline none
				&.error
					border 1px solid #FF0000
					&:focus-visible
						border 2px solid #FF0000
			button
				position absolute
				z-index 2
				top 0
				right 0

				height 100%
				width 40px

				border none
				background-color transparent
				svg
					pointer-events none
				&:focus-visible
					outline-offset -2px
		& > button[disabled]
			background-color secondaryBg
			color #BAC0B7
			pointer-events none

		& button[type="submit"]
			.btn-loader
				margin-left -20px
				margin-right 20px

.auth-form
	display flex
	flex-direction column
	gap 10px
	&__forgete
		display inline

		width auto

		text-align left
		font-weight 400
		font-size 14px
		line-height 18px
		color mainFont

		border none
		background-color inherit
		margin 5px auto 0 0
		&:after
			display block
			content ''

			height 1px
			width 112px

			background-color primaryAccentColor
	&__remember
		display flex
		align-items center
		gap 6px
		margin 5px 0
		label
			font-size 14px
			font-weight 400
			line-height 18px
		input
			position absolute
			appearance none
			-webkit-appearance none
			-moz-appearance none
			outline none
			&:checked + span
				background-color #5D6359
				outline-color #5D6359
				svg
					display block
			&:focus-visible + span
				box-shadow 0 0 0 2px #5D6359
		span
			display flex
			justify-content center
			align-items center

			width 14px
			height 14px

			border 1px solid #FFF
			border-radius 2px
			background-color #BAC0B7
			outline 1px solid #BAC0B7
			svg
				display none
				width 6px
				height 7px

	.error-message
		color #FF0000
		align-items start
		font-weight 400
		font-size 12px
		line-height 18px

	.auth-btn
		margin-top 30px

	&__social-title
		text-align center
		font-weight 400
		font-size 14px
		line-height 18px

	&__social-btns
		display grid
		grid-template-columns repeat(2, 1fr)

		width 100%
		height 48px
		a
			width 100%
			height 100%

			display flex
			align-items center
			justify-content center

			border 1px solid #BAC0B7
			background-color transparent
			&:first-child
				border-radius 50px 0 0 50px
				border-right none
			&:last-child
				border-radius 0 50px 50px 0
			svg
				width 22px
				height 22px
				filter grayscale(100%) contrast(10%)

			&:focus-visible
				outline none
				border 2px solid #5D6359



.reg-form
	display flex
	flex-direction column
	gap 10px
	& > button
		margin-top 20px
	.error-message
		min-height 20px
		color #FF0000
		font-weight 400
		font-size 12px
		line-height 18px
		span
			display block
			font-weight 700

.forget-form
	display flex
	flex-direction column
	h4
		text-align center
		font-weight 700
		font-size 22px
		line-height 28px
		color secondaryColor

		margin-bottom 35px

	p
		margin 10px 0 20px
		font-weight 400
		font-size 14px
		line-height 18px

.form-disable
	display none
